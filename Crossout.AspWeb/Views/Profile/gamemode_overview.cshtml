@using Crossout.AspWeb.Helper
@using Crossout.AspWeb.Models.Cod
@model UserProfile
@{
    var loc = Model.Localizations;
}

<div id="gamemode_overview_card" class="card my-1 mt-2 d-none gamemode-overview" data-uid="@Model.Uid">

    <ul class="nav nav-pills nav-fill mb-3" id="classification_list" role="tablist"></ul>
    <ul class="nav nav-tabs nav-fill mb-3" id="game_type_list" role="tablist"></ul>

    <div class="d-flex flex-row mt-3">
        <div class="col">
            <div class="row d-flex justify-content-center"><p>Games Recorded</p></div>
            <div id="games_recorded" class="row display-4 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="row d-flex justify-content-center"><p>Win Rate</p></div>
            <div id="win_rate" class="row display-4 justify-content-center"></div>
        </div>
    </div>
    <div class="d-flex flex-row mt-3">
        <div class="col">
            <div class="row d-flex justify-content-center"><p>Kills</p></div>
            <div id="kills" class="row display-4 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="row d-flex justify-content-center"><p>Assists</p></div>
            <div id="assists" class="row display-4 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="row d-flex justify-content-center"><p>(K + A) / G</p></div>
            <div id="ka_g" class="row display-4 justify-content-center"></div>
        </div>
    </div>
    <div class="d-flex flex-row mt-3">
        <div class="col">
            <div class="row d-flex justify-content-center"><p>Medals</p></div>
            <div id="medals" class="row display-4 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="row d-flex justify-content-center"><p>MVP Rate</p></div>
            <div id="mvp" class="row display-4 justify-content-center"></div>
        </div>
    </div>
    <div class="d-flex flex-row mt-3">
        <div class="col">
            <div class="flex-row d-flex justify-content-center"><p>Avg Score</p></div>
            <div id="avg_score" class="flex-row d-flex h5 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="flex-row d-flex justify-content-center"><p>Avg Kills</p></div>
            <div id="avg_kills" class="flex-row d-flex h5 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="flex-row d-flex justify-content-center"><p>Avg Assists</p></div>
            <div id="avg_assists" class="flex-row d-flex h5 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="flex-row d-flex justify-content-center"><p>Avg Dmg</p></div>
            <div id="avg_damage" class="flex-row d-flex h5 justify-content-center"></div>
        </div>
        <div class="col">
            <div class="flex-row d-flex justify-content-center"><p>Avg Dmg Rec</p></div>
            <div id="avg_damage_rec" class="flex-row d-flex h5 justify-content-center"></div>
        </div>
    </div>
</div>
