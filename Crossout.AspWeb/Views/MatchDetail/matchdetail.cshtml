@{
    Layout = "_Layout";
}

@using Crossout.AspWeb.Models.Cod
@model MatchDetail
@{
    var loc = Model.Localizations;
}

<partial name="header" model="@Model" />

<div class="half-hd-container px-3">

    @if (WebSettings.Settings.EnableAds)
    {
        <partial name="leaderboardad" />
    }

    <div class="row">
        <div class="col-lg-7 col-md-12">
            <div class="card my-1 p-2">
                <h4 class="card-title">Match <span class="timestamp">@Model.MatchRecord.match_start</span> <span data-toggle="collapse" data-target="#helpWrapper"><svg class="feather-help-circle"><use xlink:href="/icons/feather-sprite.svg#help-circle" /></svg></span></h4>

                <div id="helpWrapper" class="collapse">
                    <h5 class="m-2"><loc model="loc" category="shared" name="title.howitworks">How it works</loc></h5>

                </div>

                <h5>
                    @Model.MatchRecord.match_type
                    <small class="text-muted">on</small>
                    @Model.Map.map_display_name
                </h5>

            </div>

        </div>
        <div class="col-lg-5 col-md-12">
            <div class="card my-1 p-2">
                <h4 class="card-title">Summary</h4>
                <div class="d-flex flex-row justify-content-between">
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-column">
                            <b>Min. Power Score</b>
                            <div>@Model.MatchRecord.min_power_score</div>
                        </div>
                        <div class="d-flex flex-column">
                            <b>Max. Power Score</b>
                            <div>@Model.MatchRecord.max_power_score</div>
                        </div>
                        <div class="d-flex flex-column">
                            <b>Power Score Range</b>
                            <div>@Model.PowerScoreRange</div>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-column">
                            <b>Start</b>
                            <div class="timestamp">@Model.MatchRecord.match_start</div>
                        </div>
                        <div class="d-flex flex-column">
                            <b>End</b>
                            <div class="timestamp">@Model.MatchRecord.match_end</div>
                        </div>
                        <div class="d-flex flex-column">
                            <b>Duration</b>
                            <div>@Model.Duration</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="card my-1 p-2">
        <h4 class="card-title">Teams</h4>
        <div class="my-1">
            <h5>Team 1 - @(Model.MatchRecord.winning_team == 1 ? "Won" : "Lost")</h5>
            <partial name="matchteamtable" model="new TeamTable { Id = 1, Team = Model.Team1PlayersCombined }" />
        </div>
        <div class="my-1">
            <h5>Team 2 - @(Model.MatchRecord.winning_team == 2 ? "Won" : "Lost")</h5>
            <partial name="matchteamtable" model="new TeamTable { Id = 2, Team = Model.Team2PlayersCombined }" />
        </div>
    </div>
</div>

<script>
</script>